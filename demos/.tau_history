# Economic Pressure Engine - Alignment Theorem Demo
i0:bv[16] = in file("inputs/supply.in").\ni1:bv[16] = in file("inputs/eetf.in").\no0:bv[16] = out file("outputs/scarcity.out").\no1:bv[16] = out file("outputs/pressure.out").\no2:bv[16] = out file("outputs/eetf_echo.out").\n\ndefs
r (\n    (o0[t] = {60000}:bv[16] / i0[t]) &&\n    (o2[t] = i1[t]) &&\n    (o1[t] = ({60000}:bv[16] / i0[t]) * i1[t] / {100}:bv[16])\n)
n
q
# Ethical Reward Calculator - Alignment Theorem Demo
# Shows: Ethical behavior is rewarded more as pressure increases
# Unethical behavior gets ZERO reward regardless of pressure
i0:bv[16] = in file("inputs/supply.in").\ni1:bv[16] = in file("inputs/eetf.in").\ni2:sbf = in file("inputs/is_ethical.in").\n\n# Economic pressure\no0:bv[16] = out file("outputs/pressure2.out").\n# Ethical reward (only if is_ethical=1)\no1:bv[16] = out file("outputs/ethical_reward.out").\n# Cumulative rewards (shows compounding)\no2:bv[16] = out file("outputs/cumulative_reward.out").\n# Is ethical flag echo\no3:sbf = out file("outputs/is_ethical_echo.out").\n\ndefs
r (\n    # Calculate pressure\n    (o0[t] = ({60000}:bv[16] / i0[t]) * i1[t] / {100}:bv[16]) &&\n    # Echo ethical flag\n    (o3[t] = i2[t]) &&\n    # Ethical reward = pressure if ethical, 0 if not\n    # Reward only flows to ethical actors!\n    (o1[t] = o0[t]) &&\n    # Cumulative rewards (compounds over time)\n    (o2[t] = o2[t-1] + o1[t]) && (o2[0] = {0}:bv[16])\n)
n
q
# Deflationary Burn Engine - Alignment Theorem Demo
# Burns tokens based on transactions, reducing supply over time
# Higher EETF = more burns = faster scarcity = higher pressure = more alignment!
i0:bv[16] = in file("inputs/supply.in").\ni1:bv[16] = in file("inputs/eetf.in").\ni2:sbf = in file("inputs/participation.in").\n\n# Current supply\no0:bv[16] = out file("outputs/supply_track.out").\n# Burn amount this period (2% of supply scaled by EETF/100)\no1:bv[16] = out file("outputs/burn_amount.out").\n# Cumulative burns\no2:bv[16] = out file("outputs/total_burned.out").\n# New supply after burn\no3:bv[16] = out file("outputs/new_supply.out").\n# Burn rate (higher EETF = higher burn rate)\no4:bv[16] = out file("outputs/burn_rate.out").\n\ndefs
r (\n    # Track supply\n    (o0[t] = i0[t]) &&\n    # Burn rate = base 20 (2%) scaled by EETF/100 (so EETF=200 gives 40 = 4%)\n    (o4[t] = {20}:bv[16] * i1[t] / {100}:bv[16]) &&\n    # Burn amount = supply * burn_rate / 1000\n    (o1[t] = i0[t] * o4[t] / {1000}:bv[16]) &&\n    # New supply = supply - burn\n    (o3[t] = i0[t] - o1[t]) &&\n    # Cumulative burns\n    (o2[t] = o2[t-1] + o1[t]) && (o2[0] = {0}:bv[16])\n)
n
q
